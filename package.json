{
    "name": "ArtemiJS",
    "version": "0.0.1",
    "description": "This is port of Artemis, is a high performance Entity System framework for games, written in JavaScript, and is a framework to manage entities in a game world.",
    "keywords": [
        "entity framework",
        "game engine",
        "game framework"
    ],
    "homepage": "http://cojack.github.io/artemijs/",
    "bugs": {
        "url" : "https://github.com/cojack/artemijs/issues",
        "email" : "xcojack@gmail.com"
    },
    "license": "AGPL-3.0",
