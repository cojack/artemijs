        "name": "PrzemysÅ‚aw Czekaj",
        "email": "xcojack@gmail.com",
        "url": "http://cojack.pl"
    },
    "main": "artemijs",
    "repository": {
        "type": "git",
        "url": "git@github.com:cojack/artemijs.git"
    }, 
    "dependencies": {},
    "devDependencies": {
        "mocha": "2.3.*",
        "should": "7.1.*",
        "browserify": "12.0.*",
        "watchify": "3.6.*",
        "uglify-js": "2.5.*",
        "jsdoc": "3.3.*"
    },
    "scripts": {
        "doc": "jsdoc --package package.json --readme README.md -p -c jsdoc.json",
        "test": "mocha --recursive",
        "build-debug": "browserify src/Artemi.js -d -s ArtemiJS > dist/artemijs.js",
        "build-min": "browserify src/Artemi.js -s ArtemiJS | uglifyjs -c -m --mangle-props > dist/artemijs.min.js",
        "build": "npm run build-debug && npm run build-min",
        "watch": "watchify src/Artemi.js -d -s ArtemiJS -o dist/artemijs.js -v"
    }
}